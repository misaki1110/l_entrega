<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.base.setup</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div name='multi_company' position="after">
            	<h2>Aparezcan Campos</h2>
            	<div class="row mt16 o_settings_container" name="aparece_campo_entrega">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                		<div class="o_setting_left_pane">
    	                    <field name="group_aparece_entrega"/>
    	                </div>
                        <div class="o_setting_right_pane">
                            <label string="Campos Visibles" for="group_aparece_entrega"/>
                            <div class="text-muted">
                                Visualiza Campos al hacer click
                            </div>                                    
                        </div>
                    </div>
        		</div>
        	</div>
    	</field>
	</record>
</odoo>